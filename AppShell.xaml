<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Soulbound.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Soulbound"
    Shell.FlyoutBehavior="Flyout"
    Title="Soulbound">


    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:Views.RegistrationPage}"
        Route="WelcomePage" />  

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Views.LogInPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Registration"
        ContentTemplate="{DataTemplate local:Views.RegistrationPage}"
        Route="RegistrationPage" />

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:Views.RegistrationPage}"
        Route="WelcomePage" />


</Shell>
