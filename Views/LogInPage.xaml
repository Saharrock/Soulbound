<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Soulbound.Views.LogInPage"
             Title="LogInPage"
             BackgroundColor="#d1743b">
    <Grid Padding="30">
        <!-- Основное содержимое по центру -->
        <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center"
        Spacing="25">

            <!-- Заголовок -->
            <Label
            Text="WELCOME TO SOULBOUND"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="#853c0f"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center" />

            <!-- Сообщение пользователю -->
            <Label
            Text="{Binding MessageForUser}"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            FontSize="20"
            TextColor="#853c0f" />

            <!-- Поле Username -->
            <VerticalStackLayout Spacing="5">
                <Label
                Text="Username:"
                FontAttributes="Bold"
                FontSize="16"
                TextColor="#853c0f"
                HorizontalOptions="Start" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Entry
                    Text="{Binding UserInput}"
                    Placeholder="Enter your username..."
                    WidthRequest="250"
                    HorizontalOptions="Center" />

                    <!-- Маленькая кнопка сброса -->
                    <Button
                    Text="✖"
                     Command="{Binding ResetUsernameCommand}"
                    FontSize="12"
                    WidthRequest="30"
                    HeightRequest="30"
                    BackgroundColor="#eee"
                    TextColor="#853c0f"
                    CornerRadius="15"
                    Margin="5,0,0,0" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Поле Password -->
            <VerticalStackLayout Spacing="5">
                <Label
                Text="Password:"
                FontAttributes="Bold"
                FontSize="16"
                TextColor="#853c0f"
                HorizontalOptions="Start" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Entry
                    Text="{Binding UserPassword}"
                    Placeholder="Enter your password..."
                    IsPassword="True"
                    WidthRequest="250"
                    HorizontalOptions="Center" />

                    <!-- Маленькая кнопка сброса -->
                    <Button
                    Text="✖"
                    Command="{Binding ResetPasswordCommand}"
                    FontSize="12"
                    WidthRequest="30"
                    HeightRequest="30"
                    BackgroundColor="#eee"
                    TextColor="#853c0f"
                    CornerRadius="15"
                    Margin="5,0,0,0" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Кнопки: Log In и Registration -->
            <HorizontalStackLayout
            Spacing="20"
            HorizontalOptions="Center">

                <Button
                Text="Log In"
                WidthRequest="120"
                HeightRequest="50"
                BackgroundColor="#853c0f"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                IsEnabled="{Binding IsLoginEnable}"
                Command="{Binding TryLoginCommand}" 
                />
  
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Кнопка перехода на другую страницу (внизу справа) -->
        <Button
        Text="Go to Another Page"
        Command="{Binding GotoRegisterPageCommand}"
        WidthRequest="160"
        HeightRequest="45"
        BackgroundColor="#853c0f"
        TextColor="White"
        FontAttributes="Bold"
        CornerRadius="10"
        HorizontalOptions="End"
        VerticalOptions="End"
        Margin="0,0,10,10" />
    </Grid>

</ContentPage>