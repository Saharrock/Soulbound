<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Soulbound.Views.CreateGoalPage"
             xmlns:models="clr-namespace:Soulbound.Models"
             xmlns:viewmodels="clr-namespace:Soulbound.ViewModels"
             BackgroundColor ="#d1743b"
             Title="CreateGoalPage">


    <VerticalStackLayout Padding="20" Spacing="12">

        <Label
        Text="Create New Goal"
        FontSize="22"
        FontAttributes="Bold"
        HorizontalOptions="Center"
        TextColor="White"/>

        <Entry
        Placeholder="Goal title"
        Text="{Binding NewTitle}"
        BackgroundColor="#a85928"
        TextColor="White"/>

        <!-- Time + help -->
        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Entry
            Placeholder="Time to complete (DDMMYY)"
            Text="{Binding NewTimeToComplete}"
            BackgroundColor="#a85928"
            TextColor="White"/>

            <Frame
            Padding="0"
            Margin="8,0,0,0"
            WidthRequest="28"
            HeightRequest="28"
            BackgroundColor="#7d3e18">

                <Button
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="?"
                TextColor="White"
                Command="{Binding ToggleTimeHelpCommand}" />
            </Frame>
        </Grid>

        <!-- Help card -->
        <Frame
        IsVisible="{Binding IsTimeHelpVisible}"
        Padding="10"
        BackgroundColor="#7d3e18"
        CornerRadius="10"
        HasShadow="False">

            <Label
            Text="Format:( DDMMYY ) Example: 010125 â†’ 1 day, 1 month, 25 years"
            FontSize="12"
            TextColor="White"/>
        </Frame>

        <!-- User message -->
        <Label
        Text="{Binding MessageForUser}"
        FontSize="15"
        TextColor="#FFD580"
        HorizontalOptions="Center"/>

        <Button
        Text="Add Goal"
        Command="{Binding AddGoalCommand}"
        BackgroundColor="Green"
        TextColor="White"
        WidthRequest="200"
        HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>