<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Soulbound.Views.CreateGoalPage"
             xmlns:models="clr-namespace:Soulbound.Models"
             xmlns:viewmodels="clr-namespace:Soulbound.ViewModels"
             BackgroundColor ="#d1743b"
             Title="CreateGoalPage">



    <Grid Padding="20">
        <VerticalStackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center"
            Spacing="15">

            <Label
            HorizontalOptions="Center"
            Text="Add Goal"
            VerticalOptions="Center" />
            <Entry Placeholder="Goal title" Text="{Binding NewTitle}" />
            <Entry Placeholder="Time to complete" Text="{Binding NewTimeToComplete}" />
            <Button
BackgroundColor="Green"
Command="{Binding AddGoalCommand}"
HorizontalOptions="Center"
Text="Add Goal"
TextColor="White"
WidthRequest="200" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>